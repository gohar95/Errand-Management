<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:background="#FFFFFF"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/oo11"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/morderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/mainColor3"
                android:textSize="18sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/editORDER"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <RelativeLayout
            android:id="@+id/oo22"
            android:layout_below="@+id/oo11"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/morderNAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/GreyColor"
                android:textSize="18sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/oo33"
            android:layout_below="@+id/oo22"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/morderQUAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/GreyColor"
                android:textSize="18sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/morderPLAN"
            android:layout_below="@+id/oo22"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/GreyColor"
            android:textSize="18sp"/>


        <RelativeLayout
            android:id="@+id/oo44"
            android:layout_below="@+id/oo33"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/morderTIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/GreyColor"
                android:textSize="18sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/morderCOST"
            android:layout_below="@+id/oo33"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/GreyColor"
            android:textSize="18sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>