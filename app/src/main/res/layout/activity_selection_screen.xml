<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionScreen">

    <RadioGroup
        android:id="@+id/selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <RadioButton
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Make an Errand"
            android:textSize="30sp"
            android:textColor="@color/mainColor2"/>

        <RadioButton
            android:id="@+id/student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take an Errand"
            android:textColor="@color/mainColor2"
            android:textSize="30sp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want to:"
        android:textColor="@color/mainColor3"
        android:layout_marginLeft="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="11dp"
        android:id="@+id/ima"
        android:layout_above="@+id/selection"
        android:layout_alignLeft="@+id/selection"
        android:layout_alignStart="@+id/selection" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/newlogo"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@color/white"
        android:id="@+id/imageView2"
        android:alpha="0.1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/next_button"
        android:text="NEXT"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:elevation="10dp"
        android:layout_marginTop="85dp"
        android:alpha="0.8"
        android:layout_below="@+id/selection"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
