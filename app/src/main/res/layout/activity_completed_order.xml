<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CustomerData.CompletedOrder">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="260dp">

                <ImageView
                    android:id="@+id/ref112"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/finish_stamp"/>
                <TextView
                    android:id="@+id/ref113"
                    android:layout_below="@+id/ref112"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Job is Done"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_below="@+id/ref113"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You had finished this order"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/GreyColor"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_height="220dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Order ID"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/GreyColor"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/orderCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="30sp" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
